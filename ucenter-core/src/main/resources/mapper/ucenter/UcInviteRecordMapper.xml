<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mzwise.modules.ucenter.mapper.UcInviteRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mzwise.modules.ucenter.entity.UcInviteRecord">
        <id column="id" property="id"/>
        <result column="sub_member_id" property="subMemberId"/>
        <result column="sub_member_nickname" property="subMemberNickname"/>
        <result column="sup_member_id" property="supMemberId"/>
        <result column="sup_member_nickname" property="supMemberNickname"/>
        <result column="is_effective" property="isEffective"/>
        <result column="effective_time" property="effectiveTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!--分页查看下级-->
    <select id="mySubMember" resultType="com.mzwise.modules.ucenter.vo.MySubMembersVO">
        select id, nickname, avatar, is_partner, partner_commission_rate
        from uc_member
        where parent_id = #{supMemberId}
    </select>

</mapper>
