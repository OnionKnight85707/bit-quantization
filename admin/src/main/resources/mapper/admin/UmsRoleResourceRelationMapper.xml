<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mzwise.modules.admin.mapper.UmsRoleResourceRelationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mzwise.modules.admin.entity.UmsRoleResourceRelation">
        <id column="id" property="id" />
        <result column="role_id" property="roleId" />
        <result column="resource_id" property="resourceId" />
    </resultMap>

    <select id="getAllResourceIdByIdRoleId" resultType="java.lang.Long">
        select resource_id from ums_role_resource_relation where role_id = #{roleId}
    </select>

</mapper>
